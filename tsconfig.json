{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnreachableCode": false,
    "skipLibCheck": false
  },
  "include": [
    "./src/"
  ]
}